@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PL.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container center-div">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-border1 py-3 px-5">
            <h1 class="text-center">Login</h1>
            <form asp-controller="Account" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control custom-border2" />
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control custom-border2" />
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input custom-checkbox" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div>
                    <p>Don't have an account? <a class="custom-link" asp-controller="Account" asp-action="Register">Register</a></p>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="text-center">
                    <button type="submit" class="custom-button2">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}