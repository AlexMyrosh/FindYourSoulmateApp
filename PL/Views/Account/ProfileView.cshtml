@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PL.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center mt-4 mb-4">Your information</h1>
    <div class="card custom-form1">
        <div class="pt-5 px-5" style="font-size: 18px;">
            <div class="mb-1">
                <label class="fw-bold" asp-for="FirstName"></label>: @Model.FirstName
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="LastName"></label>: @Model.LastName
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="Age"></label>: @Model.Age
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="BirthDate"></label>: @Model.BirthDate.ToShortDateString()
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="Gender"></label>: @Model.Gender
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="Bio"></label>: @Model.Bio
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="Interests"></label>: @string.Join(", ", Model.Interests.Select(i => i.Name))
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="LookingForGender"></label>: @Model.LookingForGender
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="RelationType"></label>: @Model.RelationType
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="UserName"></label>: @Model.UserName
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="Email"></label>: @Model.Email
            </div>
            <div class="mb-1">
                <label class="fw-bold" asp-for="PhoneNumber"></label>: @Model.PhoneNumber
            </div>
            <div class="mb-1">
                <label class="fw-bold">Password</label>: 
                <a class="custom-link" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
            </div>
        </div>
        <div class="text-center py-5 px-5">
            <a class="custom-button2" asp-controller="Account" asp-action="ProfileUpdate">Edit Profile</a>
        </div>
    </div>
</div>



