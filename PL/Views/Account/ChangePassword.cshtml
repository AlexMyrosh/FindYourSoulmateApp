@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PL.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container center-div">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-border1 py-5 px-5">
            <h1 class="text-center mb-3">Password updating</h1>
            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="custom-label" asp-for="CurrentPassword"></label>
                    <input asp-for="CurrentPassword" class="form-control custom-border2" />
                </div>
                <div class="mb-3">
                    <label class="custom-label" asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control custom-border2" />
                </div>
                <div class="mb-4">
                    <label class="custom-label" asp-for="ConfirmNewPassword"></label>
                    <input asp-for="ConfirmNewPassword" class="form-control custom-border2" />
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="text-center">
                    <button type="submit" class="custom-button2">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}