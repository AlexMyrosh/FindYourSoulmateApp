@model PL.ViewModels.UserProfileSelectionViewModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
    @foreach (var userCard in Model.UsersToDisplay)
    {
        <div class="col-12 userCard" style="display: none;">
            <div class="d-flex justify-content-center align-items-center">
                <div class="card">
                    <div class="card-body">
                            <h5 class="card-title">@userCard.FirstName @userCard.LastName</h5>
                        <p class="card-text">
                                Age: @userCard.Age<br />
                                Gender: @userCard.Gender<br />
                                Relation Type: @userCard.RelationType<br />
                                Bio: @userCard.Bio
                        </p>
                        <h6>Interests:</h6>
                        <div class="row">
                                @foreach (var interest in userCard.Interests)
                            {
                                @if (!Model.CurrentUser.Interests.Select(i => i.Id).Contains(interest.Id))
                                {
                                    <div class="col mb-3 ">
                                        <div class="card interest-card">
                                            <div class="card-body">
                                                <p class="card-title">@interest.Name</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col mb-3">
                                        <div class="card interest-card selected-interest">
                                            <div class="card-body">
                                                <p class="card-title">@interest.Name</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <button class="btn btn-success likeBtn" data-user-id="@userCard.Id">Like</button>
                                <button class="btn btn-danger dislikeBtn" data-user-id="@userCard.Id">Dislike</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Show the first user card
            $(".userCard").first().show();

            // Like and Dislike button click handlers
            $(".likeBtn, .dislikeBtn").click(function () {
                let currentCard = $(this).closest(".userCard");
                let action = $(this).hasClass("likeBtn") ? "Like" : "Dislike";
                let userId = $(this).data("user-id");

                // Send like or dislike action to the server
                $.post("/Profile/" + action, { userId: userId }, function (result) {
                    // Hide the current card and show the next one
                    currentCard.hide().next(".userCard").show();
                });
            });
        });
    </script>
}