@model Presentation_Layer.ViewModels.QuestionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>QuestionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Question", FormMethod.Post, new{id = "createForm"}))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Body)
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Coefficient)
                @Html.TextBoxFor(model => model.Coefficient, new { @class = "form-control", type = "number", min = "0.2", step = "0.2", max = "1" })
                @Html.ValidationMessageFor(model => model.Coefficient, "", new { @class = "text-danger" })
            </div>
            
            <div id="OptionsSection">
                @await Html.PartialAsync("PartialViews/_QuestionOptionsPartial", Model)
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
