@using PL.Enums
@model PL.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Знайомство";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Привіт, давай знайомитись:)</h4>
<hr />
<p>Введи, будь-ласка, інформацію про себе<br/>Будь уважним, на вказану елекронну скриньку прийде результат, коли всі охочі приймуть в ньому участь</p>
<p>Цю інформацію можна буде змінити, поки це опитування ще не завершенно</p>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new {@class="fw-bold"})
                <span class="text-danger">*</span>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder="Ім'я Прізвище"})
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                    @Html.LabelFor(model => model.TelegramUsername, new {@class="sr-only fw-bold", @for="usernameField"})
                <span class="text-danger">*</span>
                    <div class="input-group mb-2">
                    <div class="usernameField">
                            <div class="input-group-text">@@</div>
                        </div>
                        @Html.TextBoxFor(model => model.TelegramUsername, new { @class = "form-control", @for="usernameField", placeholder="Username"})
                    </div>
                
                
                @Html.ValidationMessageFor(model => model.TelegramUsername, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new {@class="fw-bold"})
                <span class="text-danger">*</span>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder="example@gmail.com"})
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger"})
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.City, new {@class="fw-bold"})
                @Html.TextBoxFor(model => model.City, new { @class = "form-control", placeholder="Харків"})
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger"})
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.UniversityYear, new {@class="fw-bold"})
                <span class="text-danger">*</span>
                @Html.TextBoxFor(model => model.UniversityYear, new { @class = "form-control",type = "number", min = "1", step = "1", max = "6"})
                @Html.ValidationMessageFor(model => model.UniversityYear, "", new { @class = "text-danger"})
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.Gender, new {@class="fw-bold"})
                <span class="text-danger">*</span>
                <br/>
                @Html.DropDownListFor(model=>model.Gender, Html.GetEnumSelectList(typeof(GenderViewModel)), null, new {@class="form-select" })
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger"})
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.LookingForGender, new {@class="fw-bold"})
                <span class="text-danger">*</span>
                <br />
                @Html.DropDownListFor(model=>model.LookingForGender, Html.GetEnumSelectList(typeof(LookingForGenderViewModel)), null, new {@class="form-select"})
                @Html.ValidationMessageFor(model => model.LookingForGender, "", new { @class = "text-danger"})
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.LookingForRelationType, new {@class="fw-bold"})
                <span class="text-danger">*</span>
                <br />
                @Html.DropDownListFor(model=>model.LookingForRelationType, Html.GetEnumSelectList(typeof(RelationTypeViewModel)), null, new {@class="form-select"})
                @Html.ValidationMessageFor(model => model.LookingForRelationType, "", new { @class = "text-danger"})
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.UniversityFaculty, new {@class="fw-bold"})
                <span class="text-danger">*</span>
                <br />
                @Html.DropDownListFor(model=>model.UniversityFaculty, Html.GetEnumSelectList(typeof(UniversityFacultyViewModel)), null, new {@class="form-select"})
                @Html.ValidationMessageFor(model => model.UniversityFaculty, "", new { @class = "text-danger"})
            </div>

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.LastSurveyPass)
            <br/>
            <div class="form-group">
                <input type="submit" value="Далі" class="btn btn-success" />
            </div>
        }
    </div>
    <small>Нажимаючи на кнопку "Далі", ви даєте згоду на обробку та передачу вашої персональної інформації</small>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
